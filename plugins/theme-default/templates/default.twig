

{% use "theme-core.twig" %}

{{ block('chart_head_no_fs') }}


<div class="dw-chart-body" id="chart"></div>

<div class="dw-chart-footer" id="footer">
    {% if not plain %}
        <div class="footer-left">
            {% if source %}
                <span data-src="{% trans "Source: " %}" class="source-block">{% trans "Source: " %}
                {% if sourceURL %}<a target="_blank" class="source" href="{{ sourceURL }}">{% endif %}{{ source }}{% if sourceURL %}</a>{% endif %}</span>
            {% endif %}
            <a href="data">{% trans "Get the data" %}</a>
        </div>
        <div class="footer-right">
            {% trans "Created with" %} <a href="{{ DW_DOMAIN }}_/{{ chart.id }}" target="_blank">{% trans "Datawrapper" %}</a>
        </div>
    {% endif %}
</div>
