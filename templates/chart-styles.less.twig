    }

    a img {
        border: 0px;
    }

    .embed-code {
        position: absolute;
        bottom: 20px;
        left: 0;
        padding: 15px;
        background: #eee;
        color: #000;
        border-radius: 6px;
        text-transform: none;
        font-size: 1em;
        box-shadow: 2px 2px 0px rgba(0,0,0,.4);
        z-index: 10;
    }

    .embed-code textarea {
        width: 90%;
        margin-top: 2%;
        height: 7em;
    }

    .hide {
        display: none;
    }

    .embed-code .close {
        cursor: pointer;
        position: absolute;
        right: 2%;
        top: 2%;
        font-size: 1.125em;
        opacity: 0.7;
    }

    .embed-code .close:hover {
        opacity: 1;
    }

