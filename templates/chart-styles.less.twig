        {% endif %}

        {% if style_header_border_right %}
            border-right: @style_header_border_right;
        {% endif %}

        {% if style_header_textAlign %}
            text-align: @style_header_textAlign;
        {% endif %}


        h1 {
            {% if typography_headline_typeface %}
