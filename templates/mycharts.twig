{% use "utils.twig" %}

{% extends "core.twig" %}


{% block content %}


<div class="docs">
    <div class="pull-right" style="position:relative;top:-16px">
        {{ block('pagination') }}
    </div>
    <h1 class="title">
        {% if user2 %}
            {{ "Charts by %s" | trans | replace({'%s': user2.email }) }}
{#         {% else %}
            {% trans "My Charts" %} #}
        {% endif %}
