

<div id="header">
    {% if not plain %}
    <h1><span>{{ title|purify }}</span></h1>

        {% if intro %}
        <p>{{ intro|purify|raw }}</p>
        {% endif %}

    {% endif %}
    <a href="{{ chartUrlFs }}" target="_blank" class="fs-btn top-right" title="{% trans "Fullscreen" %}" data-toggle="fullscreen"></a>
</div>

<div id="chart"></div>

<div id="footer">
    {% if not plain %}
    <div class="footer-left">
         {% trans "Created with" %} <a href="{{ DW_DOMAIN }}" target="_blank" class="lgo">Datawrapper</a>
    </div>
    <div class="footer-right">
        {% if source %}
            {% trans "Source: " %}
            {% if sourceURL %}<a target="_blank" class="source" href="{{ sourceURL }}">{% endif %}{{ source }}{% if sourceURL %}</a>{% endif %},
        {% endif %}
        <a href="data">{% trans "Get the data" %}</a>
    </div>
{% endif %}
</div>
