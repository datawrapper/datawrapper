{% block header %}

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container" style="position:relative">
                 <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a class="brand" href="/">
                    <!--[if IE ]>
                    <img src="/static/img/dataninja-logo.png">
                    <![endif]-->
                    <!--<img class="hide-from-ie" src="/static/img/dataninja-logo.svg" alt="ABZV" height="30" width="69" />-->
                    <img class="hide-from-ie" src="/static/img/dataninja-logo.png" alt="ABZV" height="32" width="32" />
                    Datawrapper<span class="beta"></span>
                </a>

                <div class="nav-collapse">
                    <ul class="nav dw-header-nav pull-right">

                    {% for link in headlinks %}

                        {% if link.dropdown %}

                            <li class="{{ link.id }} dropdown{% if link.active %} active{% endif %}">
                                <a id="dw-header-link-{{ link.id }}" href="{{ link.url }}" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-{{ link.icon }} icon-whte"></i>
                                    {{ link.title }}
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    {% for slink in link.dropdown %}
                                    <li><a href="{{ slink.url }}">{%if slink.icon %}<i class="icon-{{ slink.icon }}"></i> {% endif %}{{ slink.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>

                        {% else %}

                            <li class="{{ link.id }}{% if link.active %} active{% endif %}">
                                <a id="dw-header-link-{{ link.id }}" href="{{ link.url }}"{% if link.modal %} data-toggle="modal"{% endif %}>
                                  <i class="icon-{{ link.icon }} icon-whie"></i>
                                   {{ link.title }}
                                </a>
                            </li>

                        {% endif %}

                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
