{
    "name": "datawrapper",
    "version": "1.24.0",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "install": "grunt",
        "watch": "watch 'make assets' assets/",
        "pretest-legacy": "cd test_legacy/build && rollup -c",
        "test-legacy": "./node_modules/mocha/bin/mocha --require reify",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/datawrapper/datawrapper.git"
    },
    "dependencies": {
        "babel-preset-env": "^1.7.0",
        "crypto-js": "^3.1.9-1",
        "d3-array": "^1.2.4",
        "d3-scale": "^2.0.0",
        "fontfaceobserver": "2.1.0",
        "jschardet": "^1.6.0",
        "lodash-es": "^4.17.15",
        "moment": "^2.24.0",
        "query-string": "^6.2.0",
        "request": "^2.88.0",
        "rollup-plugin-alias": "^1.4.0"
    },
    "devDependencies": {
        "@datawrapper/controls": "^2.3.1",
        "@datawrapper/polyfills": "^1.0.4",
        "@datawrapper/shared": "^0.14.0",
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "ava": "^1.2.1",
        "babel-eslint": "^10.0.1",
        "babel-preset-stage-2": "^6.24.1",
        "browser-env": "^3.2.6",
        "cash-dom": "^3.0.0",
        "chalk": "^2.3.0",
        "crypto-js": "^3.1.9-1",
        "d3-dsv": "^1.0.8",
        "d3-queue": "^3.0.7",
        "eslint-plugin-html": "^5.0.3",
        "esm": "^3.2.11",
        "grunt": "^1.0.4",
        "grunt-subgrunt": "^1.2.0",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "js-yaml": "^3.13.1",
        "less": "^3.9.0",
        "lint-staged": "^8.1.0",
        "mocha": "^5.2.0",
        "node.extend": "^2.0.2",
        "pirates": "^4.0.1",
        "prettier": "^1.16.4",
        "prettier-plugin-svelte": "^0.3.0",
        "reify": "^0.17.3",
        "rollup": "*",
        "rollup-plugin-buble": "*",
        "rollup-plugin-commonjs": "*",
        "rollup-plugin-i18n": "*",
        "rollup-plugin-json": "*",
        "rollup-plugin-node-resolve": "*",
        "rollup-plugin-svelte": "4.1.0",
        "rollup-plugin-uglify": "*",
        "source-map-support": "^0.5.11",
        "svelte": "1.64.0",
        "svelte-extras": "^2.0.2",
        "svelte-transitions-slide": "^1.0.0",
        "svelte-upgrade": "^1.0.14",
        "underscore": "^1.9.1",
        "underscore-es": "^1.9.8",
        "watch": "^1.0.2"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 150,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > sha && git add sha"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "*.min.js",
            "**/dw-2.0.js",
            "**/vendor/**/.js",
            "www/static/js/svelte/**/*.js"
        ]
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    }
}
