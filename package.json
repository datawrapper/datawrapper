{
    "name": "datawrapper",
    "version": "1.22.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/datawrapper/datawrapper.git"
    },
    "scripts": {
        "format": "prettier --write 'src/**/*.{js,html}'",
        "lint": "healthier 'src/**/*.{js,html}' && prettier --check 'src/**/*.{js,html}'",
        "install": "grunt",
        "watch": "watch 'make assets' assets/",
        "test": "./node_modules/mocha/bin/mocha --require reify"
    },
    "dependencies": {
        "crypto-js": "^3.1.9-1",
        "d3-array": "^1.2.1",
        "d3-scale": "^2.0.0",
        "jschardet": "^1.6.0",
        "request": "^2.88.0",
        "rollup-plugin-alias": "^1.4.0"
    },
    "devDependencies": {
        "@datawrapper/polyfills": "^1.0.4",
        "@tivac/eslint-plugin-svelte": "^1.2.1",
        "babel-eslint": "^10.0.1",
        "chalk": "^2.3.0",
        "crypto-js": "^3.1.9-1",
        "d3-dsv": "^1.0.8",
        "d3-queue": "^3.0.7",
        "eslint-plugin-html": "^5.0.3",
        "grunt": "^1.0.3",
        "grunt-subgrunt": "^1.2.0",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "js-yaml": "^3.10.0",
        "less": "^3.9.0",
        "lint-staged": "^8.1.0",
        "mocha": "^5.2.0",
        "node.extend": "^2.0.0",
        "prettier": "^1.16.4",
        "reif": "^1.0.0",
        "reify": "^0.17.3",
        "rollup": "*",
        "rollup-plugin-buble": "*",
        "rollup-plugin-commonjs": "*",
        "rollup-plugin-i18n": "*",
        "rollup-plugin-json": "*",
        "rollup-plugin-node-resolve": "*",
        "rollup-plugin-svelte": "4.1.0",
        "rollup-plugin-uglify": "*",
        "svelte": "1.64.0",
        "svelte-extras": "^2.0.2",
        "svelte-transitions-slide": "^1.0.0",
        "svelte-upgrade": "^1.0.14",
        "underscore": "^1.8.3",
        "underscore-es": "^1.9.8",
        "watch": "^1.0.2"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn"
            ]
        },
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "prettier --write",
                "healthier",
                "git add"
            ],
            "*.html": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "*.min.js",
            "**/vendor/**/.js",
            "www/static/js/svelte/**/*.js"
        ]
    }
}
