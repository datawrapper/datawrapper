{
    "name": "datawrapper",
    "version": "1.25.0",
    "scripts": {
        "format": "prettier 'src/**/*.{js,html}' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "watch": "watch 'make assets' assets/",
        "pretest-legacy": "cd test_legacy/build && rollup -c",
        "test-legacy": "./node_modules/mocha/bin/mocha --require reify",
        "test": "ava",
        "test:watch": "ava --watch --verbose"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/datawrapper/datawrapper.git"
    },
    "dependencies": {
        "babel-preset-env": "^1.7.0",
        "d3-array": "^1.2.4",
        "d3-scale": "^2.2.2",
        "fontfaceobserver": "2.1.0",
        "jschardet": "^1.6.0",
        "lodash-es": "^4.17.15",
        "moment": "^2.24.0",
        "query-string": "^6.12.1",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "@datawrapper/controls": "^2.19.1",
        "@datawrapper/polyfills": "^1.7.0",
        "@datawrapper/shared": "^0.25.3",
        "@rollup/plugin-alias": "^3.1.0",
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "ava": "^1.4.1",
        "babel-eslint": "^10.1.0",
        "babel-preset-stage-2": "^6.24.1",
        "browser-env": "^3.3.0",
        "cash-dom": "^3.2.0",
        "chalk": "^2.4.2",
        "crypto-js": "^3.3.0",
        "d3-dsv": "^1.2.0",
        "d3-queue": "^3.0.7",
        "eslint-plugin-html": "^5.0.5",
        "esm": "^3.2.25",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "js-yaml": "^3.13.1",
        "less": "^3.11.1",
        "lint-staged": "^8.2.1",
        "mocha": "^5.2.0",
        "node.extend": "^2.0.2",
        "pirates": "^4.0.1",
        "prettier": "^1.19.1",
        "prettier-plugin-svelte": "^0.3.0",
        "reify": "^0.20.12",
        "rollup": "^2.7.5",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-i18n": "^0.3.1",
        "rollup-plugin-svelte": "4.1.0",
        "rollup-plugin-terser": "^5.3.0",
        "source-map-support": "^0.5.19",
        "svelte": "1.64.0",
        "svelte-extras": "^2.0.2",
        "svelte-transitions-slide": "^1.0.0",
        "svelte-upgrade": "^1.0.14",
        "underscore": "^1.10.2",
        "underscore-es": "^1.9.8",
        "watch": "^1.0.2"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 150,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > sha && git add sha"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{js,html}": [
                "prettier --write",
                "healthier",
                "git add"
            ]
        },
        "ignore": [
            "*.min.js",
            "**/dw-2.0.js",
            "**/vendor/**/.js",
            "www/static/js/svelte/**/*.js"
        ]
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    }
}
