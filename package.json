{
    "name": "datawrapper",
    "version": "1.25.2",
    "scripts": {
        "format": "prettier  --write 'src/**/*.{js,html}' && prettier --write 'www/static/js/dw/**/*.js'",
        "lint": "healthier 'src/**/*.{js,html}' && healthier 'www/static/js/dw/**/*.js' && prettier --check 'src/**/*.{js,html}' && prettier --check 'www/static/js/dw/**/*.js'",
        "watch": "watch 'make assets' assets/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/datawrapper/datawrapper.git"
    },
    "dependencies": {
        "@datawrapper/shared": "^0.32.8",
        "babel-eslint": "^10.1.0",
        "eslint-plugin-html": "^6.0.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "prettier-plugin-svelte": "^1.1.0",
        "watch": "^1.0.2"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "buble": "^0.20.0",
        "chalk": "^4.1.0",
        "d3-dsv": "^1.2.0",
        "d3-queue": "^3.0.7",
        "glob": "^7.1.6",
        "healthier": "^3.3.0",
        "js-yaml": "^3.14.0",
        "less": "^3.11.3",
        "request": "^2.88.2",
        "underscore": "^1.10.2"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ],
        "overrides": [
            {
                "files": [
                    "www/static/js/dw/**/*.js"
                ],
                "env": {
                    "browser": true
                },
                "globals": {
                    "$": "readonly",
                    "_": "readonly",
                    "define": "readonly",
                    "dw": "readonly"
                },
                "rules": {
                    "camelcase": "warn",
                    "no-console": "warn",
                    "no-unused-vars": "warn",
                    "one-var": "warn",
                    "dot-notation": "warn",
                    "eqeqeq": "warn",
                    "no-unneeded-ternary": "warn",
                    "spaced-comment": "warn",
                    "no-useless-escape": "warn",
                    "new-cap": "warn"
                }
            }
        ]
    },
    "ava": {
        "require": [
            "esm",
            "./test/helpers/setup-browser-env.js",
            "./test/helpers/setup-svelte-compiler.js"
        ],
        "files": [
            "./src/**/*.test.js"
        ],
        "sources": [
            "./src/**/*.{js,html}"
        ]
    },
    "lint-staged": {
        "*.{js,html}": [
            "prettier --write",
            "healthier"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git rev-parse HEAD > sha && git add sha"
        }
    }
}
