{
    "title": {
        "en": "Line Chart",
        "de": "Liniendiagramm",
        "fr": "Graphique linéaire"
    },
    "version": "1.3.1",
    "extends": "raphael-chart",
    "dimensions": 2,
    "order": 40,
    "options": {
        "direct-labeling": {
            "type": "checkbox",
            "label": {
                "en": "Direct labeling",
                "de": "Linien direkt beschriften",
                "fr": "Nommer les lignes"
            },
            "default": false,
            "depends-on": {
                "chart.min_series_num": 2
            }
        },
        "legend-position": {
            "type": "radio",
            "label": {
                "en": "Legend position",
                "de": "Position der Legende",
                "fr": "Nommer les lignes"
            },
            "options": [{
                "value": "right",
                "label": {
                    "en": "right",
                    "de": "rechts",
                    "fr": "à droite"
                }
            },{
                "value": "top",
                "label": {
                    "en": "top",
                    "de": "oben",
                    "fr": "en haut"
                }
            },{
                "value": "inside",
                "label": {
                    "en": "inside",
                    "de": "innen",
                    "fr": "dedans"
                }
            }],
            "default": "right",
            "depends-on": {
                "direct-labeling": false,
                "chart.min_series_num": 2
            }
        },
        "fill-between": {
            "type": "checkbox",
            "label": {
                "en": "Fill between lines",
                "de": "Flächen ausfüllen",
                "fr": "Fill between lines"
            },
            "default": false,
            "depends-on": {
                "chart.min_series_num": 2,
                "chart.max_series_num": 2
            }
        },
        "smooth-lines": {
            "type": "checkbox",
            "label": {
                "en": "Smooth lines",
                "de": "Linien glätten",
                "fr": "Lisser les lignes"
            },
            "default": false,
            "expert": false
        },
        "rotate-x-labels": {
            "type": "checkbox",
            "label": {
                "en": "Rotate labels 45°",
                "de": "Beschriftungen um 45° drehen",
                "fr": "Pivoter les étiquettes de 45°"
            },
            "default": false
        },
        "baseline-zero": {
            "type": "checkbox",
            "label": {
                "en": "Force a baseline at zero",
                "de": "Erweitere die Achse bis zur Null",
                "fr": "Échelle à zero"
            }
        },

        "connect-missing-values": {
            "type": "checkbox",
            "label": {
                "en": "Connect lines between missing values",
                "de": "Linien zwischen fehlenden Werten verbinden",
                "fr": "Joindre les lignes pour les valeurs manquantes"
            },
            "depends-on": {
                "chart.missing_values": true
            }
        },
        "extend-range": {
            "type": "checkbox",
            "label": {
                "en": "Extend y-range to nice axis ticks",
                "de": "Erweiterte y-Achse",
                "fr": "Échelle à zero"
            }
        },
        "force-banking": {
            "type": "checkbox",
            "hidden": true,
            "label": {
                "en": "Bank the lines to 45°",
                "de": "Anstiege auf 45° ausrichten",
                "fr": "Limiter à 45° les lignes"
            }
        },
        "show-grid": {
            "type": "checkbox",
            "hidden": true,
            "label": {
                "en": "Show grid",
                "de": "Show grid",
                "fr": "Afficher la grille"
            },
            "default": false
        }
    }
}